//Description : A simple C++ where the computer picks
//a random number between 1 and 100.
//The player tries to guess the number.
//The program gives hints: "Too high" or "Too low",
//and shows how many tries it took to win
#include<iostream>
#include<cstdlib>
#include<ctime>

using namespace std;
int main()
{
char playAgain = 'y' ;
    do{
    srand(time(0));
    int secretNumber = rand()% 100 + 1;
    
    int  guess ;
    int tries = 0;
    
    cout <<"=======================================\n";
    cout <<"  ðŸŽ¯ Welcome to Guess the Number ðŸŽ¯      \n";
    cout <<"=======================================\n";
    cout << " I have chosen a number between 1 and 100.\n";
    cout << "Try to guess : \n\n";
    
    
    do {
        "cout << Enter your guess :";
        cin >> guess;
        tries ++;
        
    if(guess > secretNumber)    
    cout<<"Too high ! Try again .\n";
    
    else if (guess < secretNumber)
    cout<< "Too low ! Try again . \n";
    
    else
    cout <<"ðŸŽ‰ Correct! You got it in "<< tries << " tries !\n";
    
    
    }
    while(guess!=secretNumber);
    
    cout<<"Do you want to play again ? (y/n)  :\n ";
    cin>>playAgain;
    
    }while (playAgain == 'Y' || playAgain =='y'); 
    
    cout << "Thanks for playing ! ðŸ‘‹  ðŸ‘‹ \n";
    
    
    return 0;
}
